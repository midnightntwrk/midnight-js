include "std";

export ledger round: Counter;

witness private_increment(): [];

export circuit increment(): [] {
  round.increment(1);
  private_increment();
}

export circuit decrement(amount: Uint<16>): [] {
  round.decrement(amount);
  private_increment();
}

export circuit reset(): [] {
  round.reset_to_default();
  private_increment();
}
