{
  "name": "@midnight-ntwrk/midnight-js",
  "description": "Midnight application development framework",
  "version": "2.1.0-rc.1",
  "packageManager": "yarn@4.9.2",
  "repository": "git@github.com:midnight-ntwrk/artifacts",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "turbo run clean",
    "build": "turbo run build",
    "clean-build": "turbo run clean-build",
    "test": "turbo run test",
    "it": "turbo run it",
    "e2e": "turbo run e2e",
    "e2e-groups": "turbo run e2e-groups",
    "check": "turbo run check && yarn lint",
    "deploy": "turbo run deploy",
    "build:markdown-docs": "typedoc --validation --plugin typedoc-plugin-markdown --options typedoc.json",
    "lint": "eslint ./packages",
    "lint:fix": "NODE_OPTIONS=--max-old-space-size=16192 eslint ./packages --fix",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@midnight-ntwrk/compact-runtime": "0.9.0-rc.1",
    "@midnight-ntwrk/ledger": "6.1.0-alpha.1",
    "@midnight-ntwrk/wallet-sdk-address-format": "2.0.0"
  },
  "devDependencies": {
    "@d2t/vitest-ctrf-json-reporter": "^1.1.0",
    "@eslint/js": "^9.30.1",
    "@midnight-ntwrk/wallet": "5.0.0",
    "@midnight-ntwrk/wallet-api": "5.0.0",
    "@midnight-ntwrk/wallet-sdk-hd": "2.0.0",
    "@midnight-ntwrk/wallet-sdk-unshielded-wallet": "1.0.0-beta.2",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.3",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "pinst": "^3.0.0",
    "prettier": "^3.6.2",
    "rollup": "^4.37.0",
    "rxjs": "^7.8.1",
    "testcontainers": "^11.2.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.0",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "4.7.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
