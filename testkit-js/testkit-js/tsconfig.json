{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./test/**/*.ts",
    "./src/**/*.ts",
    "*.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
